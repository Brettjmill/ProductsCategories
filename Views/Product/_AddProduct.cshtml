@model Product

<div class="container">
    <h3>New Product</h3>
    <br>
    <div>
        <form asp-controller="Product" asp-action="AddProduct" class="shadow p-3 rounded" method="POST">
        <div class="form-group">
          <label asp-for="Name"></label>
          <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
          <input asp-for="Name" class="form-control">
        </div>

        <div class="form-group">
          <label asp-for="Description"></label>
          <span asp-validation-for="Description" class="text-danger font-weight-bold"></span>
          <textarea asp-for="Description" class="form-control" rows="8"></textarea>
        </div>

        <div class="form-group">
          <label asp-for="Price"></label>
          <span asp-validation-for="Price" class="text-danger font-weight-bold"></span>
          <input asp-for="Price" class="form-control">
        </div>

        <button class="btn btn-outline-success">Create</button>
      </form>
    </div>
</div>